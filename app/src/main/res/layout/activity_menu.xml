<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/knopToTests"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="308dp"
        android:onClick="toTest"
        android:text="Перейти к тестам"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knopToUroki" />

    <Button
        android:id="@+id/knopToUroki"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="65dp"
        android:onClick="toUroki"
        android:text="Смотреть уроки"
        app:layout_constraintBottom_toTopOf="@+id/knopToTests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/knopToRpogress" />

    <Button
        android:id="@+id/knopToRpogress"
        android:layout_width="276dp"
        android:layout_height="57dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="556dp"
        android:onClick="toProgress"
        android:text="Отслеживать прогресс обучения"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>